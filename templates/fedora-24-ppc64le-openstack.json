{
  "builders": [
    {
      "boot_command": [
        "c<wait5><wait10>",
        "linux /ppc/ppc64/vmlinuz ro ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-24/ks-ppc64le-openstack.cfg<enter>",
        "initrd /ppc/ppc64/initrd.img<enter>",
        "boot<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": 3072,
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "66d0a8c2691ccacc345fabcd25f230624755cd2d03a56ec8b10eb00d9c13242f",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/24/Server/ppc64le/iso/Fedora-Server-netinst-ppc64le-24-1.2.iso",
      "output_directory": "packer-fedora-24-ppc64le-openstack",
      "shutdown_command": "echo 'fedora'|sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "qemu-system-ppc64",
      "machine_type": "pseries",
      "ssh_password": "fedora",
      "ssh_port": 22,
      "ssh_username": "fedora",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-fedora-24-ppc64le"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'fedora' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/fedora/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/chef.sh",
        "scripts/fedora/openstack.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://fedora-secondary.osuosl.org"
  }
}
