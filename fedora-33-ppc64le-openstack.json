{
  "builders": [
    {
      "boot_command": [
        "c<wait5>",
        "linux /ppc/ppc64/vmlinuz inst.stage2=hd:LABEL=Fedora-S-dvd-ppc64le-33 ro ",
        "biosdevname=0 net.ifnames=0 plymouth.enable=0 ",
        "inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-33/ks-ppc64le-openstack.cfg<enter>",
        "initrd /ppc/ppc64/initrd.img<enter>",
        "boot<enter>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": 3584,
      "disk_interface": "virtio-scsi",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "sha256:9a2225dd554bc958edc99488247707884aa0b14003e3c2182831d2c0b3e04168",
      "iso_url": "{{user `mirror`}}/releases/33_Beta/Server/ppc64le/iso/Fedora-Server-netinst-ppc64le-33_Beta-1.3.iso",
      "output_directory": "packer-fedora-33-ppc64le-openstack",
      "shutdown_command": "echo 'fedora'|sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "machine_type": "pseries",
      "ssh_password": "fedora",
      "ssh_port": 22,
      "ssh_username": "fedora",
      "ssh_wait_timeout": "10000s",
      "vnc_bind_address": "0.0.0.0",
      "type": "qemu",
      "vm_name": "packer-fedora-33-ppc64le-openstack"
    }
  ],
  "provisioners": [
    {
      "pause_before": "10s",
      "execute_command": "echo 'fedora' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/common/sshd.sh",
        "scripts/fedora/openstack.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://fedora-secondary.osuosl.org",
    "image_name": "Fedora 33 LE"
  }
}
