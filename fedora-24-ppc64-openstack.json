{
  "builders": [
    {
      "boot_command": [
        "c<wait5><wait10>",
        "linux /ppc/ppc64/vmlinuz ro ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-24/ks-ppc64-openstack.cfg<enter>",
        "initrd /ppc/ppc64/initrd.img<enter>",
        "boot<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": 3072,
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "28c9fd4533ca0ecab3881c30b9bcee47f145c6207db2b0d3dd55522b0e971ff2",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/24/Server/ppc64/iso/Fedora-Server-netinst-ppc64-24-1.2.iso",
      "output_directory": "packer-fedora-24-ppc64-openstack",
      "shutdown_command": "echo 'fedora'|sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "qemu-system-ppc64",
      "machine_type": "pseries",
      "ssh_password": "fedora",
      "ssh_port": 22,
      "ssh_username": "fedora",
      "ssh_wait_timeout": "10000s",
      "vnc_bind_address": "0.0.0.0",
      "type": "qemu",
      "vm_name": "packer-fedora-24-ppc64"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'fedora' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/fedora/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/chef.sh",
        "scripts/fedora/openstack.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://fedora-secondary.osuosl.org",
    "image_name": "Fedora 24 BE"
  }
}

