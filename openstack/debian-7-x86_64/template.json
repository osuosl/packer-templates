{
  "builders": [
    {
      "type": "qemu",
      "name": "debian-7-openstack-x86_64",
      "vm_name": "debian-7-openstack-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "72473e8a5e65b61acc7efde90d9f71d1",
      "iso_checksum_type": "md5",
      "iso_url": "http://debian.osuosl.org/debian-cdimage/current/amd64/iso-cd/debian-7.3.0-amd64-netinst.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; sh 'shutdown.sh'",
      "ssh_password": "osuadmin",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [ [ "-m", "1024m" ] ],
      "boot_wait": "10s",
      "boot_command": [
        "<esc> auto url=http://10.0.2.2:{{ .HTTPPort }}/preseed.cfg keymap=us debian-installer/keymap=us<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../scripts/common.sh",
      "destination": "/tmp/common.sh"
    },
    {
      "type": "file",
      "source": "../files/debian/firstboot.sh",
      "destination": "/etc/firstboot.sh"
    },
    {
      "type": "file",
      "source": "../files/debian/locale-preseed.cfg",
      "destination": "/root/locale-preseed.cfg"
    },
    {
      "type": "shell",
      "scripts": [
        "../../scripts/openstack-debian.sh",
        "../../scripts/cleanup.sh",
        "../../scripts/zerodisk.sh"
      ],
      "override": {
        "debian-7-openstack-x86_64": {
          "execute_command": "sh '{{.Path}}'"
        }
      }
    }
  ]
}
