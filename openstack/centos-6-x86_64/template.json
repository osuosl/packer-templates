{
  "builders": [
    {
      "type": "qemu",
      "name": "centos-6-x86_64",
      "vm_name": "centos-6-x86_64",
      "accelerator": "kvm",
      "disk_size": 2048,
      "format": "qcow2",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
      "iso_checksum": "af4a1640c0c6f348c6c41f1ea9e192a2",
      "iso_checksum_type": "md5",
      "iso_url": "http://centos.osuosl.org/6.9/isos/x86_64/CentOS-6.9-x86_64-minimal.iso",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; sh 'shutdown.sh'",
      "ssh_password": "osuadmin",
      "ssh_port": 22,
      "ssh_username": "root",
      "ssh_wait_timeout": "10000s",
      "qemuargs": [ [ "-m", "1024m" ] ],
      "boot_wait": "10s",
      "boot_command": [
        "<tab> text ks=http://10.0.2.2:{{ .HTTPPort }}/preseed.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../../scripts/common.sh",
      "destination": "/tmp/common.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "../../scripts/epel.sh",
        "../../scripts/openstack-yum.sh",
        "../../scripts/cleanup.sh",
        "../../scripts/zerodisk.sh"
      ],
        "execute_command": "sh '{{.Path}}'"
    }
  ]
}
