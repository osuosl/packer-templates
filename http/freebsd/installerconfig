DISTRIBUTIONS="base.txz kernel.txz"
PARTITIONS=da0 gpt

# Workaround for https://bugs.freebsd.org/bugzilla/show_bug.cgi?id=203777
export nonInteractive="YES"

HOSTNAME=freebsd

#!/bin/sh -x

ifdev=$(ifconfig | grep '^[a-z]' | cut -d: -f1 | head -n 1)
# Enable required services
cat >> /etc/rc.conf << EOT
ifconfig_${ifdev}="dhcp"
sshd_enable="YES"
EOT

# Set up user accounts
echo "freebsd" | pw -V /etc useradd freebsd -h 0 -s /bin/sh -G wheel -d /home/freebsd -c "FreeBSD User"
echo "freebsd" | pw -V /etc usermod root

mkdir -p /home/freebsd
chown 1001:1001 /home/freebsd

reboot
