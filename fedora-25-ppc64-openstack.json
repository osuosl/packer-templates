{
  "builders": [
    {
      "boot_command": [
        "c<wait5><wait10>",
        "linux /ppc/ppc64/vmlinuz ro ",
        "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-25/ks-ppc64-openstack.cfg<enter>",
        "initrd /ppc/ppc64/initrd.img<enter>",
        "boot<enter><wait>"
      ],
      "accelerator": "kvm",
      "boot_wait": "14s",
      "disk_size": 2048,
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "b4c893693850201e2e0678d02954ce4d8117d431950b1a160ad0a52b0b99aab8",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `mirror`}}/releases/25/Server/ppc64/iso/Fedora-Server-netinst-ppc64-25-1.2.iso",
      "output_directory": "packer-fedora-25-ppc64-openstack",
      "shutdown_command": "echo 'fedora'|sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ]
      ],
      "qemu_binary": "qemu-system-ppc64",
      "machine_type": "pseries",
      "ssh_password": "fedora",
      "ssh_port": 22,
      "ssh_username": "fedora",
      "ssh_wait_timeout": "10000s",
      "type": "qemu",
      "vm_name": "packer-fedora-25-ppc64"
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CHEF_VERSION={{user `chef_version`}}"
      ],
      "execute_command": "echo 'fedora' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/fedora/fix-slow-dns.sh",
        "scripts/common/sshd.sh",
        "scripts/common/vmtools.sh",
        "scripts/common/chef.sh",
        "scripts/fedora/openstack.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "chef_version": "provisionerless",
    "mirror": "http://fedora-secondary.osuosl.org"
  }
}

