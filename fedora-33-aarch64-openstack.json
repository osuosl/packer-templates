{
  "builders": [
    {
      "boot_command": [
        "c<wait>",
        "linux /images/pxeboot/vmlinuz ro ",
        "biosdevname=0 net.ifnames=0 plymouth.enable=0 ",
        "inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora-33/ks-aarch64-openstack.cfg<enter>",
        "initrd /images/pxeboot/initrd.img<enter>",
        "boot<enter>"
      ],
      "accelerator": "kvm",
      "boot_wait": "6s",
      "disk_size": 4096,
      "disk_interface": "virtio-scsi",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "sha256:e07f7196a208f855123d8897ff304fd5ae526052052b320797b74b6868fccedd",
      "iso_url": "{{user `mirror`}}/releases/33/Server/aarch64/iso/Fedora-Server-netinst-aarch64-33-1.3.iso",
      "output_directory": "packer-fedora-33-aarch64-openstack",
      "shutdown_command": "echo 'fedora'|sudo -S shutdown -P now",
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-boot", "strict=on" ],
        [ "-machine", "virt,gic-version=3,accel=kvm" ],
        [ "-cpu", "host" ],
        [ "-bios", "/usr/share/AAVMF/AAVMF_CODE.fd" ],
        [ "-monitor", "none" ]
      ],
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "machine_type": "pseries",
      "ssh_password": "fedora",
      "ssh_port": 22,
      "ssh_username": "fedora",
      "ssh_wait_timeout": "10000s",
      "vnc_bind_address": "0.0.0.0",
      "type": "qemu",
      "vm_name": "packer-fedora-33-aarch64-openstack"
    }
  ],
  "provisioners": [
    {
      "pause_before": "10s",
      "execute_command": "echo 'fedora' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/common/sshd.sh",
        "scripts/fedora/openstack.sh",
        "scripts/fedora/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "mirror": "http://fedora.osuosl.org/linux",
    "image_name": "Fedora 33"
  }
}
